    .container.my-4.lg:my-12
      .grid.grid-docs.grid-cols-1.lg:grid-cols-12
        .row-start-1.row-span-1.lg:col-start-1.lg:col-span-3
          .my-4.lg:pr-12
            = partial "docsearch"
        #navigation.row.start-3.lg:row-start-2.lg:row-span-1.lg:col-start-1.lg:col-span-3
          .mt-4.lg:pr-12
            = partial "side_nav"
        #main.row-start-2.lg:row-start-1.lg:row-span-2.lg:col-start-4.lg:col-span-9
          .bg-white.px-4.lg:px-12.py-6.lg:py-8.rounded.shadow-sm
            .inner= yield
    .layout-footer
      = partial "footer"
    = partial "cookies"

